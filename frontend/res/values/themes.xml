<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Weekend" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorTertiary">@color/colorAccent</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/yellow_accent</item>
        <item name="colorOnTertiaryContainer">@color/black</item>

        <item name="colorError">@color/red_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">#FDE7E7</item>
        <item name="colorOnErrorContainer">@color/red_error</item>

        <item name="android:colorBackground">@color/background_grey</item> <item name="colorOnBackground">@color/text_dark</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_dark</item>
        <item name="colorSurfaceVariant">@color/background_card</item>
        <item name="colorOnSurfaceVariant">@color/text_light</item>
        <item name="colorOutline">@color/light_gray</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">?attr/colorSurface</item>

        <item name="materialButtonStyle">@style/App.Button</item>
        <item name="toolbarStyle">@style/App.Toolbar</item>
        <item name="tabStyle">@style/App.TabLayout</item>
        <item name="bottomNavigationStyle">@style/App.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/App.CardView</item>
        <item name="android:textViewStyle">@style/App.TextView</item>
        <item name="editTextStyle">@style/App.EditText</item>
        <item name="android:ratingBarStyle">@style/RatingBar</item>

    </style>

    <style name="App.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="App.Toolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="App.TabLayout" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemIconTint">@color/nav_selector</item>
        <item name="itemTextColor">@color/nav_selector</item>
    </style>

    <style name="App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="App.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/rating_star_color</item>
    </style>

</resources>