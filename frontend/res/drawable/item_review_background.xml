<?xml version="1.0" encoding="utf-8"?>
<!-- This drawable creates a shape with a light grey border and slightly rounded corners. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Sets the background color of the shape to white -->
    <solid android:color="@android:color/white" />

    <!-- Adds a border (stroke) to the shape -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- A light grey color for the border -->

    <!-- Defines the radius for the corners to make them slightly rounded -->
    <corners android:radius="8dp" />

</shape>
