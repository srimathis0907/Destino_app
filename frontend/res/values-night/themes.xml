<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Weekend" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurfaceVariant">#3A3A3A</item>
        <item name="colorOnSurfaceVariant">#BDBDBD</item>
        <item name="colorOutline">#555555</item>

        <item name="android:windowBackground">?attr/colorSurface</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:textViewStyle">@style/App.TextView.Dark</item>
        <item name="editTextStyle">@style/App.EditText.Dark</item>
        <item name="android:ratingBarStyle">@style/RatingBar.Dark</item>
        <item name="materialButtonStyle">@style/App.Button</item> <item name="toolbarStyle">@style/App.Toolbar</item> <item name="tabStyle">@style/App.TabLayout</item> <item name="bottomNavigationStyle">@style/App.BottomNavigationView</item> <item name="materialCardViewStyle">@style/App.CardView</item> </style>

    <style name="App.TextView.Dark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="App.EditText.Dark" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="MonthButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="RatingBar.Dark" parent="RatingBar">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/rating_star_color</item>
    </style>

</resources>