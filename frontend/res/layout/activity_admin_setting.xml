<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".AdminSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:backgroundTint="@color/green">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Travel Tips -->
            <LinearLayout
                android:id="@+id/travelTipsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground">
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_icon_background">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_travel_tips" android:layout_gravity="center"/>
                </FrameLayout>
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Manage Travel Tips" android:layout_marginStart="16dp" android:textSize="16sp" android:textColor="@android:color/black"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="12dp"/>

            <!-- Analysis -->
            <LinearLayout
                android:id="@+id/analysisLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground">
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_icon_background">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/analysis" android:layout_gravity="center" app:tint="#00B5B0"/>
                </FrameLayout>
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Analysis" android:layout_marginStart="16dp" android:textSize="16sp" android:textColor="@android:color/black"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="12dp"/>

            <!-- About the App -->
            <LinearLayout
                android:id="@+id/aboutAppLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground">
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_icon_background">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/info" android:layout_gravity="center" app:tint="#00B5B0"/>
                </FrameLayout>
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="About the App" android:layout_marginStart="16dp" android:textSize="16sp" android:textColor="@android:color/black"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="12dp"/>

            <!-- Contact Support -->
            <LinearLayout
                android:id="@+id/contactSupportLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground">
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_icon_background">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_contact" android:layout_gravity="center"/>
                </FrameLayout>
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Contact Support" android:layout_marginStart="16dp" android:textSize="16sp" android:textColor="@android:color/black"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginHorizontal="12dp"/>

            <!-- Terms & Policy -->
            <LinearLayout
                android:id="@+id/termsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground">
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/setting_icon_background">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_terms" android:layout_gravity="center"/>
                </FrameLayout>
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Terms &amp; Privacy Policy" android:layout_marginStart="16dp" android:textSize="16sp" android:textColor="@android:color/black"/>
                <ImageView android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FF6200EE"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/deleteAccountButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Delete Account"
        android:textAllCaps="false"
        android:textColor="#FF5252"
        android:textSize="16sp"
        app:icon="@drawable/ic_delete_account"
        app:iconTint="#FF5252"
        app:iconGravity="textStart"
        />
</LinearLayout>