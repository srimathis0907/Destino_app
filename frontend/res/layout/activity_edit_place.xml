<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back & Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Place"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp">

            <!-- Place Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Details"
                android:textColor="#009688"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Place Name"
                android:text="Manali"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:text="Himachal Pradesh, India"
                android:drawableStart="@drawable/ic_loading"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Seasonal Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seasonal Details"
                android:textColor="#009688"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Best Time Tags -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:gravity="start">

                <!-- Month Buttons -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/month_chip"
                    android:text="June"
                    android:padding="8dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/month_chip"
                    android:text="July"
                    android:padding="8dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/month_chip"
                    android:text="August"
                    android:padding="8dp"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/month_chip_selected"
                    android:text="September"
                    android:padding="8dp" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Specialty/Season"
                android:text="Monsoon Season"
                android:drawableStart="@drawable/ic_calendar"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Budget Estimation -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget Estimation"
                android:textColor="#009688"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Cost Fields -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transport Cost (₹)"
                android:text="2500"
                android:drawableStart="@drawable/ic_bus"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Food Cost (₹)"
                android:text="1500"
                android:drawableStart="@drawable/ic_restaurant"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hotel Cost (₹)"
                android:text="3000"
                android:drawableStart="@drawable/ic_hotel"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Additional Expenses (₹)"
                android:text="500"
                android:drawableStart="@drawable/ic_add"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Facilities -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facilities &amp; Details"
                android:textColor="#009688"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nearby Hotels &amp; Restaurants"
                android:text="1. The Oberoi\n2. The Leela\n3. Hotel Green Valley..."
                android:minLines="3"
                android:gravity="top"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transport Facilities"
                android:text="• Regular bus service\n• Taxi availability\n• Shared jeeps..."
                android:minLines="3"
                android:gravity="top"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Top Spots &amp; Timings"
                android:text="1. Old Manali - 9 AM - 6 PM\n2. Solang Valley - 10 AM - 5 PM\n3. Rohtang Pass - 8 AM – 6 PM…"
                android:minLines="3"
                android:gravity="top"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Route Information"
                android:text="NH21 via Una Road"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Place Status -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Status"
                android:textColor="#009688"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Mark as Special Place"  android:layout_height="40dp"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Pre-parcel Available"  android:layout_height="40dp"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@drawable/res_values_strings"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Allow Image Upload"  android:layout_height="40dp"/>

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>

        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Place"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Changes"
            android:backgroundTint="#EEEEEE"
            android:textColor="#009688"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
